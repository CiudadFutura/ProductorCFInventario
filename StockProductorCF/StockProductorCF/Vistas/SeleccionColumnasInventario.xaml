<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.SeleccionColumnasInventario"
						 NavigationPage.HasNavigationBar="false">

  <ContentPage.Content>
    <StackLayout Spacing="0" Padding="0">
	    <StackLayout VerticalOptions="Start" HorizontalOptions="Fill" Spacing="0" Padding="0">
				<Image x:Name="Cabecera" VerticalOptions="Start" Aspect="AspectFill"/>
	    </StackLayout>
			<StackLayout BackgroundColor="#C0C0C0" VerticalOptions="Start" HorizontalOptions="Fill">
				<Label FontSize="18" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" HeightRequest="30">Seleccione las columnas de stock</Label>
      </StackLayout>
      <ScrollView VerticalOptions="FillAndExpand" HorizontalOptions="Center">
				<StackLayout x:Name="ContenedorColumnas" VerticalOptions="Start" HorizontalOptions="Center" Spacing="0" Padding="0">
				</StackLayout>
      </ScrollView>
      <StackLayout BackgroundColor="#c41d23" Spacing="0" Padding="0" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Fill">
        <Button HorizontalOptions="FillAndExpand" VerticalOptions="End" Text="Listo" HeightRequest="60" Clicked="Listo"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>