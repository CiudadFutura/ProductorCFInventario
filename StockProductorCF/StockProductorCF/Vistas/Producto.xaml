<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.Producto"
             Title="Productor de la CF - Inventario"
             BackgroundColor="White">

  <ContentPage.Content>
    <StackLayout Spacing="0" Padding="0" BackgroundColor="White">
      <ScrollView>
        <StackLayout x:Name="ContenedorProducto" Spacing="0" Padding="0">
        
        </StackLayout>
      </ScrollView>
      <StackLayout Orientation="Horizontal" VerticalOptions="EndAndExpand" HorizontalOptions="EndAndExpand">
        <Button HorizontalOptions="End" VerticalOptions="End" Text="Guardar cambios" WidthRequest="100" HeightRequest="60" Clicked="GuardarCambios"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>

</ContentPage>