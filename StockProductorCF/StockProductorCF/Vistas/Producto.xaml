<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.Producto"
						 NavigationPage.HasNavigationBar="false">

  <ContentPage.Content>
    <StackLayout Spacing="0" Padding="0">
	    <StackLayout VerticalOptions="Start" HorizontalOptions="Fill" Spacing="0" Padding="0">
		    <Image x:Name="Cabecera" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
	    </StackLayout>
			<StackLayout BackgroundColor="#C0C0C0" VerticalOptions="Start" HorizontalOptions="Fill">
				<Label FontSize="18" FontAttributes="Bold" TextColor="Black" HorizontalOptions="Center" HeightRequest="30">Detalle del producto</Label>
      </StackLayout>
      <ScrollView Orientation="Vertical" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
        <StackLayout x:Name="ContenedorProducto" VerticalOptions="Start" HorizontalOptions="Fill" Spacing="0" Padding="0">
        
        </StackLayout>
      </ScrollView>
      <StackLayout BackgroundColor="#c41d23" Spacing="0" Padding="0" VerticalOptions="End" HorizontalOptions="Fill">
        <Button HorizontalOptions="FillAndExpand" VerticalOptions="End" HeightRequest="60" Text="Guardar cambios" Clicked="GuardarCambios"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>

</ContentPage>