<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.PaginaGrilla"
						 NavigationPage.HasNavigationBar="false">

	<ContentPage.Content>
		<StackLayout Spacing="0" Padding="0">
			<RelativeLayout VerticalOptions="Start">
				<Image x:Name="Cabecera" VerticalOptions="Start" HorizontalOptions="FillAndExpand"/>
				<Picker x:Name="ListaHojas" RelativeLayout.XConstraint="{ConstraintExpression Type=RelativeToParent, Property=Width, Factor=1, Constant=-120}" 
								RelativeLayout.YConstraint="{ConstraintExpression Type=RelativeToView, ElementName=Cabecera, Property=Height, Factor=.5, Constant=-30}"
								IsVisible="False" WidthRequest="120" HeightRequest="55" SelectedIndexChanged="CargarHoja"></Picker>
			</RelativeLayout>
			<StackLayout VerticalOptions="Start" HorizontalOptions="Fill" Spacing="0" Padding="0">
				<SearchBar x:Name="Buscador" IsVisible="False" HorizontalOptions="Fill" TextChanged="FiltrarProductos" SearchButtonPressed="FiltrarProductos" />
			</StackLayout>
			<StackLayout x:Name="ContenedorTabla" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" Spacing="0" Padding="0">
			</StackLayout>
			<StackLayout x:Name="ContenedorBotones" Spacing="0" Padding="0" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Fill">
				<Image x:Name="Datos" VerticalOptions="End"/>
        <Image x:Name="Refrescar" VerticalOptions="End"/>
        <Image x:Name="Escanear" VerticalOptions="End"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>