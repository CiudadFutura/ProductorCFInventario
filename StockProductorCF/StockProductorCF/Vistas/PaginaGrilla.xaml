<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.PaginaGrilla"
             Title="Productor de la CF - Inventario">

  <ContentPage.Content>
    <StackLayout Spacing="0" Padding="0">
      <StackLayout x:Name="ContenedorTabla" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" Spacing="0" Padding="0">
        <ActivityIndicator x:Name="IndicadorDeActividad" />
      </StackLayout>
      <StackLayout x:Name="ContenedorBotones" BackgroundColor="#c41d23" Spacing="0" Padding="0" Orientation="Horizontal" VerticalOptions="End" HorizontalOptions="Fill">
        <Button x:Name="Datos" VerticalOptions="End" Text="Acceso a datos" HeightRequest="60" Clicked="AccederDatos"/>
        <Button x:Name="Refrescar" VerticalOptions="End" Text="Refrescar datos" HeightRequest="60" Clicked="RefrescarDatos"/>
        <Button x:Name="Escanear" VerticalOptions="End" Text="Escanear" HeightRequest="60" Clicked="AbrirPaginaEscaner"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>