<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.PaginaGrilla"
						 NavigationPage.HasNavigationBar="false">

	<ContentPage.Content>
		<StackLayout Spacing="0" Padding="0">
			<AbsoluteLayout Padding="0">
				<Image x:Name="Cabecera"/>
				<Picker x:Name="ListaHojas" IsVisible="False" SelectedIndexChanged="CargarHoja"
								AbsoluteLayout.LayoutBounds="1,.5,120,50" AbsoluteLayout.LayoutFlags="PositionProportional"></Picker>
			</AbsoluteLayout>
			<StackLayout VerticalOptions="Start" HorizontalOptions="Fill" Spacing="0" Padding="0">
				<SearchBar x:Name="Buscador" IsVisible="False" HorizontalOptions="Fill" TextChanged="FiltrarProductos" SearchButtonPressed="FiltrarProductos" />
			</StackLayout>
			<StackLayout x:Name="ContenedorTabla" VerticalOptions="FillAndExpand" HorizontalOptions="Fill" Spacing="0" Padding="0">
			</StackLayout>
			<StackLayout Spacing="0" Padding="0" Orientation="Horizontal" VerticalOptions="End">
				<Image x:Name="Datos"/>
				<Image x:Name="Refrescar"/>
				<Image x:Name="Escanear"/>
      </StackLayout>
    </StackLayout>
  </ContentPage.Content>
  
</ContentPage>