<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="StockProductorCF.Vistas.ListaHojasCalculoGoogle"
						 NavigationPage.HasNavigationBar="false">

  <ContentPage.Content>
    <ScrollView>
      <StackLayout Spacing="0" Padding="0">
				<StackLayout Spacing="0" Padding="0" Orientation="Horizontal" VerticalOptions="Start" HorizontalOptions="Fill">
					<Image x:Name="Cabecera" VerticalOptions="Start" HorizontalOptions="EndAndExpand"/>
				</StackLayout>
        <StackLayout BackgroundColor="Gray" VerticalOptions="Start" HorizontalOptions="Fill">
          <Label FontSize="18" FontAttributes="Bold" TextColor="White" HorizontalOptions="Center">Seleccione una hoja</Label>
        </StackLayout>
        <StackLayout x:Name="ContenedorHojas" Spacing="5" Padding="5" VerticalOptions="FillAndExpand" HorizontalOptions="Fill">
        </StackLayout>
      </StackLayout>
    </ScrollView>
  </ContentPage.Content>

</ContentPage>